# Port Configuration
HTTP_PORT=80
HTTPS_PORT=443

# PostgreSQL Configuration
POSTGRES_USER=mlflow
POSTGRES_PASSWORD=changeme_strong_password
POSTGRES_DB=mlflow

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=changeme_strong_password
MINIO_BUCKET=mlflow

# pgAdmin Configuration
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=changeme_strong_password

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme_strong_password
GRAFANA_PLUGINS=

# MLflow Authentication Configuration
# Note: Update credentials in mlflow/basic_auth.ini file
# Default credentials are set in basic_auth.ini:
#   - admin_username: admin
#   - admin_password: password
# IMPORTANT: Change these in production!

# MLflow Flask Server Secret Key (for CSRF protection)
# Generate a strong random key with: python -c "import secrets; print(secrets.token_hex(32))"
MLFLOW_FLASK_SERVER_SECRET_KEY=changeme_random_secret_key

# MLflow Host - Domain that MLflow will accept requests from
MLFLOW_HOST=mlops-mlflow.cupcakez.my.id
