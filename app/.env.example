# ==============================================
# MLflow Configuration
# ==============================================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_TRACKING_USERNAME=your-username
MLFLOW_TRACKING_PASSWORD=your-password
MLFLOW_EXPERIMENT_NAME=mbg-sentiment
MLFLOW_ENABLE_ARTIFACTS=true

# Model Registry Configuration
# Uncomment to use registered models instead of latest run
MLFLOW_MODEL_NAME=MBGModel
MLFLOW_MODEL_STAGE=Production

# ==============================================
# S3/MinIO Configuration (if using remote artifact store)
# ==============================================
# AWS_ACCESS_KEY_ID=minio
# AWS_SECRET_ACCESS_KEY=minio123
# MLFLOW_S3_ENDPOINT_URL=http://localhost:9000

# ==============================================
# API Configuration
# ==============================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# ==============================================
# Application Settings
# ==============================================
# Output directory for batch predictions
PREDICTIONS_OUTPUT_DIR=data/predictions
